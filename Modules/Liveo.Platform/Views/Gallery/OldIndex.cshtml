    <span id="undo" style="display: none" class="k-button">Click here to open the window.</span>

    <script>
        $(document).ready(function () {
            var window = $("#dynawindow"),
                undo = $("#undo")
                        .bind("click", function () {
                            window.data("kendoWindow").open();
                            undo.hide();
                        });

            var onClose = function () {
                undo.show();
            }

            if (!window.data("kendoWindow")) {
                window.kendoWindow({
                    width: "600px",
                    title: "About Alvar Aalto",
                    close: onClose
                });
            }
        });
    </script>

    <style scoped="scoped">
        #example { min-height: 500px; }

        #undo { text-align: center; position: absolute; white-space: nowrap; padding: 1em; cursor: pointer; }
