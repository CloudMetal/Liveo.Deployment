@{
    ViewBag.Title = "GroupAddAnouncement";
}

 <div class="wrapper-modal-small">
        <div class="title">Add Announcement</div>
        <div class="modal-tiny-row">
            <label>
                From Date:
            <span>
                <input type="text" />
            </span>
            </label>
            <label>
                To Date:
            <span>
                <input type="text" />
            </span>
            </label>
        </div>
        <div class="clear"></div>
        <label>
            Publish Date:
            <span>
                <input type="text" />
            </span>
        </label>
        <label class="large-txt">
            Title:
            <span>
                <input type="text" />
            </span>
        </label>
        <label class="large-txt">
            Description:
            <span>
                <textarea>stuff into here</textarea>
            </span>
        </label>
        <label>
            Tags:
            <ul class="tags">
                <li>fruit</li>
                <li>vegetable</li>
            </ul>
        </label>
        <div class="clear"></div>
        <label>
            Photo:
            <span>
                <input type="file" /></span>
        </label>
        <div class="right">
            <button class="nav-btn-light">CANCEL</button>
            <button class="nav-btn-green">SAVE</button>
        </div>
    </div>